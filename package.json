{
  "name": "kahla",
  "version": "3.4.0",
  "description": "Kahla is a cross-platform business messaging app.",
  "author": "Aiursoft <postmaster@aiursoft.com> (https://www.aiursoft.com/)",
  "build": {
    "appId": "com.example.kahla",
    "productName": "Kahla",
    "copyright": "Copyright Â© 2018 Aiursoft",
    "directories": {
      "app": "www"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "license": "LICENSE",
      "artifactName": "${productName}.Setup.${version}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis"
        },
        {
          "target": "zip"
        }
      ]
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": [
        {
          "target": "deb"
        },
        {
          "target": "rpm"
        },
        {
          "target": "tar.gz"
        }
      ]
    }
  },
  "contributors": [
    "Anduin@aiursoft.com",
    "xxyzz@aiursoft.com",
    "EdgeNeko@aiursoft.com",
    "2539820590@qq.com",
    "l2dy@macports.org"
  ],
  "license": "MIT",
  "scripts": {
    "postinstall": "npm run prebuild",
    "electron": "ng build --base-href ./ && electron ./www/index.js",
    "start": "npm run prebuild && ng serve --open",
    "prebuild": "ts-node version.ts",
    "build": "ng build --base-href /",
    "lint": "ng lint --type-check && tsc",
    "prod": "npm run prebuild && ng build --base-href / --prod --output-hashing none",
    "prod-electron": "npm run prebuild && ng build --base-href ./ --prod",
    "prod-zh": "npm run prebuild && ng build --base-href / --prod --i18n-locale zh --i18n-file ./src/messages.zh.xlf"
  },
  "dependencies": {
      "@angular/animations": "8.0.0",
      "@angular/common": "8.0.0",
      "@angular/compiler": "8.0.0",
      "@angular/core": "8.0.0",
      "@angular/forms": "8.0.0",
      "@angular/platform-browser": "8.0.0",
      "@angular/platform-browser-dynamic": "8.0.0",
      "@angular/router": "8.0.0",
      "autolinker": "^3.0.5",
    "blueimp-load-image": "^2.21.0",
    "cordova-android": "^7.1.4",
    "cordova-browser": "^6.0.0",
    "cordova-ios": "^5.0.0",
    "cordova-plugin-whitelist": "^1.3.3",
    "cordova-windows": "6.0.1",
    "core-js": "^2.6.4",
    "crypto-js": "^3.1.9-1",
    "font-awesome": "^4.7.0",
    "he": "^1.2.0",
    "ngx-electron": "^2.1.1",
      "rxjs": "^6.5.2",
      "smoothscroll-polyfill": "^0.4.4",
      "sweetalert2": "^8.11.6",
      "zone.js": "^0.9.1"
  },
  "devDependencies": {
      "@angular-devkit/build-angular": "^0.800.0",
      "@angular-devkit/build-optimizer": "^0.800.0",
      "@angular-devkit/core": "^8.0.0",
      "@angular/cli": "8.0.0",
      "@angular/compiler-cli": "^8.0.0",
      "@angular/language-service": "8.0.0",
      "@types/jasmine": "^3.3.13",
    "@types/jasminewd2": "^2.0.6",
      "@types/node": "^12.0.3",
      "codelyzer": "^5.0.1",
    "cordova": "^9.0.0",
    "electron": "^4.0.4",
    "electron-builder": "^20.41.0",
      "jasmine-core": "^3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
      "node": "^12.3.1",
      "ts-node": "^8.2.0",
      "tslint": "~5.16.0",
      "typescript": "^3.4.5",
      "webpack": "^4.32.2"
  },
  "cordova": {
    "platforms": [
      "android",
      "browser",
      "ios",
      "windows"
    ],
    "plugins": {
      "cordova-plugin-whitelist": {}
    }
  },
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/AiursoftWeb/Kahla.App.git"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/AiursoftWeb/Kahla.App/issues"
  },
  "homepage": "https://kahla.aiursoft.com",
  "release": "build"
}
