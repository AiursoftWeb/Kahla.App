{
  "name": "kahla",
  "version": "4.4.1",
  "description": "Kahla is a cross-platform business messaging app.",
  "author": "Aiursoft <service@aiursoft.com> (https://www.aiursoft.com/)",
  "build": {
    "appId": "com.aiursoft.kahla",
    "productName": "Kahla",
    "copyright": "Copyright Â© 2019 Aiursoft",
    "directories": {
      "app": "www"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "license": "LICENSE",
      "artifactName": "${productName}.Setup.${version}.${ext}"
    },
    "win": {
      "target": [
        {
          "target": "nsis"
        },
        {
          "target": "zip"
        }
      ],
      "extraFiles": [
        {
          "from": "build/windows",
          "to": "./"
        }
      ]
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": [
        {
          "target": "deb"
        },
        {
          "target": "rpm"
        },
        {
          "target": "tar.gz"
        }
      ]
    }
  },
  "contributors": [
    "Anduin@aiursoft.com",
    "xxyzz@aiursoft.com",
    "EdgeNeko@aiursoft.com",
    "2539820590@qq.com",
    "l2dy@macports.org"
  ],
  "license": "MIT",
  "scripts": {
    "postinstall": "npm run prebuild",
    "electron": "ng build --base-href ./ && electron ./www/index.js",
    "start": "ng serve --open",
    "prebuild": "ts-node prebuild.ts && uglifyjs node_modules/crypto-js/crypto-js.js -c -m -o src/assets/crypto-js.min.js",
    "build": "ng build --base-href /",
    "lint": "ng lint --type-check && tsc",
    "prod": "npm run prebuild && ng build --base-href / --prod --output-hashing none",
    "prod-electron": "ng build --base-href ./ --prod",
    "prod-zh": "ng build --base-href / --prod --i18n-locale zh --i18n-file ./src/messages.zh.xlf"
  },
  "dependencies": {
    "@angular/animations": "9.1.7",
    "@angular/common": "9.1.7",
    "@angular/compiler": "9.1.7",
    "@angular/core": "9.1.7",
    "@angular/forms": "9.1.7",
    "@angular/localize": "^9.1.7",
    "@angular/platform-browser": "9.1.7",
    "@angular/platform-browser-dynamic": "9.1.7",
    "@angular/router": "9.1.7",
    "@fortawesome/fontawesome-free": "^5.14.0",
    "@joeattardi/emoji-button": "^3.0.3",
    "@videojs/themes": "^1.0.0",
    "autolinker": "^3.14.1",
    "blueimp-load-image": "^5.11.0",
    "core-js": "^3.6.5",
    "crypto-js": "^4.0.0",
    "he": "^1.2.0",
    "ngx-electron": "^2.2.0",
    "rxjs": "^6.5.5",
    "smoothscroll-polyfill": "^0.4.4",
    "sweetalert2": "^9.10.13",
    "tslib": "^2.0.0",
    "video.js": "^7.7.6",
    "zone.js": "^0.10.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.901.6",
    "@angular-devkit/build-optimizer": "^0.901.6",
    "@angular-devkit/core": "^9.1.6",
    "@angular/cli": "^9.1.6",
    "@angular/compiler-cli": "^9.1.7",
    "@angular/language-service": "9.1.7",
    "@types/crypto-js": "^3.1.46",
    "@types/node": "^12.12.39",
    "codelyzer": "^5.2.2",
    "electron": "^8.3.0",
    "electron-builder": "^22.6.0",
    "node": "^14.2.0",
    "ts-node": "^8.10.1",
    "tslint": "~6.1.2",
    "typescript": "~3.8.3",
    "uglify-js": "^3.10.0",
    "webpack": "^4.43.0"
  },
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/AiursoftWeb/Kahla.App.git"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/AiursoftWeb/Kahla.App/issues"
  },
  "homepage": "https://www.kahla.app",
  "release": "build"
}
